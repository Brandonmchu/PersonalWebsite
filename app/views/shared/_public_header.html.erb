<div id="header-container">
  <div class="header-inner">
    <div class="header-inner-left">
      <%= link_to root_path do %>
      <div class="headshot">
      </div>
      <h2>Things that make me go hmm...</h2>
      <% end %>

    </div>
    <div class="header-inner-right">
      <%= link_to about_path do %>
        <% if controller?("static_pages") && action?("about") %>
          <div class="header-menu current">
        <% else %>
          <div class="header-menu">
        <% end %>
          <h2>About</h2>
        </div>
      <% end %>
      <%= link_to root_path do %>
        <% if controller?("posts") && action?("index","show") %>
          <div class="header-menu current">
        <% else %>
          <div class="header-menu">
        <% end %>
          <h2>Blog</h2>
        </div>
      <% end %>

    </div>
  </div>
</div>
