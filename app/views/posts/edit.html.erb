<div class="row">
  <div class="span6 offset3">
  <%= render 'shared/error_messages', object: @post %>
  <%= form_for (@post) do |f| %>
    <%= f.label :title %>

    <%= f.text_field :title %>
    <%= f.label :body %>
    <%= f.text_area :body, class: "post-input-field"  %>

    <%= @post.picture.url %>
    <%= f.file_field :picture %>
    <br>
    <%= f.submit "Submit Post", class: "btn btn-large btn-success" %>
  <% end %>
  </div>
</div>
